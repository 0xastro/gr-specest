<block>
  <name>Adaptiveweighting vff</name>
  <key>specest_adaptiveweighting_vff</key>
  <category>SPECEST</category>
  <import>import specest</import>
  <make>specest.adaptiveweighting_vff($vlen, $lambdas)</make>
  <param>
    <name>Vlen</name>
    <key>vlen</key>
    <type>raw</type>
  </param>
  <param>
    <name>Lambdas</name>
    <key>lambdas</key>
    <type>real_vector</type>
  </param>
  <param>
    <name>Num_inputs</name>
    <key>num_inputs</key>
    <value>2</value>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>float</type>
    <vlen>$vlen</vlen>
    <nports>$num_inputs</nports>
  </sink>
  <source>
    <name>out</name>
    <type>float</type>
    <vlen>$vlen</vlen>
  </source>
</block>
